---
import { Icon } from "astro-icon/components";
import Skill3 from "../../common/components/Skill3.astro";
import Skill4 from "../../common/components/Skill4.astro";
import Skill5 from "../../common/components/Skill5.astro";
import Skill6 from "../../common/components/Skill6.astro";
import Skill7 from "../../common/components/Skill7.astro";
import Skill8 from "../../common/components/Skill8.astro";
---

<section class="hero__section">
  <article class="images__container">
    <picture>
      <img src="/img/logo_hero.svg" alt="Logo Metaldev" width="267" />
    </picture>

    <div class="skills__container">
      <img src="/img/skills/1.svg" alt="angular logo" width="50" />
      <img src="/img/skills/2.svg" alt="typescript logo" width="50" />
      <Skill3 />
      <Skill4 />
      <Skill5 />
      <Skill6 />
      <Skill7 />
      <Skill8 />
      <img src="/img/skills/9.svg" alt="mongo logo" width="50" />
    </div>
  </article>

  <article class="bottom_section">
    <div class="text__container">
      <div class="social__container">
        <a
          href="https://twitter.com/MetalDev_06"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Icon name="twitter" size={30} />
        </a>
        <a
          href="https://github.com/Metaldev-06/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Icon name="github" size={30} />
        </a>
        <a
          href="https://www.linkedin.com/in/fernandodiaz62/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Icon name="linkedin" size={30} />
        </a>
      </div>

      <div class="scroll__container">SCROLL</div>
    </div>
  </article>
</section>

<style>
  .hero__section {
    width: 95%;
    height: 100vh;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    aspect-ratio: 16 / 9;
    position: relative;
  }

  .images__container {
    width: 100%;
    max-width: 580px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    aspect-ratio: 16 / 9;
  }

  .skills__container {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    color: var(--color-text);

    div {
      width: 50px;
    }
  }

  .bottom_section {
    width: 100%;
    height: 200px;
    z-index: 10;
    position: absolute;
    bottom: 0;
  }

  .text__container {
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .social__container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    color: white;
  }

  .social__container a {
    color: var(--color-text);
    transition:
      opacity 0.3s ease-in-out,
      transform 0.3s ease-in-out;
    opacity: 0.6;

    &:hover {
      opacity: 1;
      transform: scale(1.1);
    }
  }
  .scroll__container {
    transform: rotate(90deg) scale(1.3);
    letter-spacing: 0.3rem;
    opacity: 0.4;
    font-weight: 500;
  }
</style>
