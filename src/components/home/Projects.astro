---
import { db, Projects, eq } from "astro:db";
import Title from "../../common/components/Title.astro";

const projects = await db
  .select()
  .from(Projects)
  .where(eq(Projects.important, true));
---

<section class="project__section">
  <Title title="Proyectos" />

  <article class="project__container">
    {
      projects.map(({ primary, name, description, url_image, slug }) => (
        <div class="card" style={primary ? "grid-column: span 2" : ""}>
          <a href={`/project/${slug}`}>
            <img src={url_image} alt={name} width="200" />

            <div class="text__container">
              <h3>{name}</h3>
              <p>{description}</p>
            </div>
          </a>
        </div>
      ))
    }
  </article>
</section>

<style>
  .project__section {
    width: var(--full-width);
    max-width: var(--max-width);
    /* min-height: 100vh; */
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 10;
  }

  .project__container {
    width: 100%;
    display: grid;
    grid-auto-rows: 300px;
    grid-template-columns: repeat(auto-fill, minmax(20rem, 1fr));
    grid-auto-flow: dense;
    gap: 1rem;
  }

  .card {
    width: 100%;
    border-radius: 4px;
    cursor: pointer;
    width: 100%;
    gap: 0.5rem;
    position: relative;
    overflow: hidden;

    a {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: flex-end;
      flex-direction: column;
      transition: all 0.3s ease-in-out;

      img {
        width: 100%;
        height: 100%;
        position: absolute;
        z-index: -1;
        object-fit: cover;
        transition: transform 0.3s ease-in-out;
      }
    }
  }

  .card:hover {
    a {
      background: rgba(0, 0, 0, 0.4);

      .text__container > p {
        display: block;
      }
    }
  }

  .card:hover img {
    transform: scale(1.1);
  }

  .text__container {
    width: 100%;
    color: var(--color-white);
    background: rgb(0, 0, 0);
    background: -moz-linear-gradient(
      0deg,
      rgba(0, 0, 0, 1) 0%,
      rgba(254, 49, 70, 0) 100%
    );
    background: -webkit-linear-gradient(
      0deg,
      rgba(0, 0, 0, 1) 0%,
      rgba(254, 49, 70, 0) 100%
    );
    background: linear-gradient(
      0deg,
      rgba(0, 0, 0, 1) 0%,
      rgba(254, 49, 70, 0) 100%
    );
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#000000", endColorstr="#fe3146", GradientType=1);
    padding: 1rem;

    p {
      display: none;
    }
  }

  @media (width < 640px) {
    .project__container {
      display: flex;
      flex-wrap: wrap;

      .card {
        height: 300px;
      }
    }
  }
</style>
