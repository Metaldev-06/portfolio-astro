---
import Image from "astro/components/Image.astro";
import ImageLogoCode from "public/img/banner__background--logo.webp";
---

<section class="hero__section">
  <article class="hero__container">
    <div class="text__container">
      <h1 class="title">
        Aprende <br />
        las buenas prácticas
      </h1>

      <p>Tu lugar para aprender programación web</p>
    </div>

    <div class="img__container">
      <Image
        src={ImageLogoCode}
        alt="Hero image"
        width="300"
        height="300"
        alt="Hero image"
        loading="eager"
      />
    </div>
  </article>
</section>

<style>
  .hero__section {
    width: 100%;
    height: 400px;
    background-image: url("/img/banner__background.webp");
    background-size: cover;
    background-position: center;
    margin-bottom: 3rem;
  }

  .hero__container {
    width: var(--full-width);
    max-width: var(--max-width);
    height: 100%;
    margin: 0 auto;
    display: flex;
    gap: 1rem;
    justify-content: space-between;
    align-items: center;
  }

  .text__container {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    .title {
      font-size: clamp(1.5rem, 5vw, 3rem);
    }
  }

  .img__container {
    img {
      aspect-ratio: 300px / 300px;
    }
  }
</style>
