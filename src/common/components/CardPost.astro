---
interface Props {
  img: string;
  title: string;
  description: string;
  date: string;
  tags: string[];
  slug?: string;
}

const { img, title, description, date, tags, slug } = Astro.props;
---

<a href={slug} class="card">
  <div class="card__img">
    <img
      src={img}
      width="300"
      alt={title}
      transition:name={`image-${title.split(" ").join("-")}`}
    />
  </div>

  <div class="card__text">
    <div class="card__title">
      <h2 class="title">{title}</h2>
      <span class="date"
        >{date.slice(0, 10).split("-").reverse().join("/")}</span
      >
    </div>
    <div class="tags">
      {tags.map((tag) => <span>{tag}</span>)}
    </div>
    <p class="description">{description}</p>
  </div>
</a>

<style>
  .card {
    width: 100%;
    height: 450px;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    border-radius: 8px;
    overflow: hidden;
    color: var(--color-white);

    &:hover {
      background-color: #8080800e;

      .card__img {
        img {
          transform: scale(1.1);
        }
      }
    }

    .card__img {
      width: 100%;
      height: 200px;
      border-radius: 8px;
      overflow: hidden;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.3s ease-in-out;
      }
    }

    .card__text {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding: 0.5rem 1rem;

      .card__title {
        .title {
          font-size: 1.2rem;
          font-weight: bold;
          display: -webkit-box;
          overflow: hidden;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 3;
        }

        .date {
          opacity: 0.7;
          font-size: 0.9rem;
        }
      }

      .tags {
        display: flex;
        gap: 0.5rem;
        span {
          padding: 0.2rem 0.5rem;
          background-color: #8080801a;
          border-radius: 10px;
          opacity: 0.8;
          font-size: 0.9rem;
        }
      }

      .description {
        font-weight: normal;
        opacity: 0.9;
        display: -webkit-box;
        overflow: hidden;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 3;
        font-size: 0.9rem;
      }
    }
  }
</style>
