---
import ButtonTheme from "./ButtonTheme.astro";
import Logo from "./Logo.astro";

const { pathname } = Astro.url;
const normalizedPathName =
  pathname.length > 1 && pathname.endsWith("/")
    ? pathname.slice(0, -1)
    : pathname;
---

<header class="header__container" transition:persist>
  <div class="header">
    <picture>
      <Logo />
    </picture>

    <nav>
      <a href="/" class={normalizedPathName === "/" ? "active" : ""}>INICIO</a>
      <a
        href="/projects"
        class={normalizedPathName === "/projects" ? "active" : ""}>PROYECTOS</a
      >
      <a href="/skills" class={normalizedPathName === "/skills" ? "active" : ""}
        >HABILIDADES</a
      >
      <a
        href="/education"
        class={normalizedPathName === "/education" ? "active" : ""}>EDUCACIÃ“N</a
      >
      <!-- <a href="/blog" class={normalizedPathName === "/blog" ? "active" : ""}
        >BLOG</a
      > -->
    </nav>

    <ButtonTheme />
  </div>
</header>

<style>
  .header__container {
    width: 100%;
    height: 86.22px;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    transition: all 0.3s ease-in-out;
  }

  .header {
    width: 100%;
    max-width: var(--max-width);
    height: 100%;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-inline: 0.5rem;
  }

  nav {
    display: flex;
    gap: 1rem;
  }

  a {
    font-weight: bold;
    color: var(--color-text);
    transition: opacity 0.3s ease-in-out;
    opacity: 0.8;

    &:hover {
      opacity: 1;
    }
  }

  .header-sticky {
    background-color: var(--card-article-color);
  }

  .active {
    opacity: 1;
  }
</style>

<script>
  const $ = (selector: string) => document.querySelector(selector);

  const header = $(".header__container");

  let isFixed = false;

  const activedFixedScroll = () => {
    const scrollY = window.scrollY;

    if (!header) return;

    if (scrollY > 0 && !isFixed) {
      header.classList.add("header-sticky");
      isFixed = true;
    } else if (scrollY === 0 && isFixed) {
      header.classList.remove("header-sticky");
      isFixed = false;
    }
  };

  document.addEventListener("scroll", activedFixedScroll);

  const navLinks = document.querySelectorAll("nav a");

  document.addEventListener("astro:after-swap", () => {
    navLinks.forEach((link: HTMLAnchorElement | any) => {
      link.classList.remove("active");

      const currentPath = window.location.pathname.slice(1);

      const hrefArray = link.href.split("/");
      const thisPath = hrefArray[hrefArray.length - 1];

      if (currentPath === thisPath) {
        link.classList.add("active");
      }
    });
  });
</script>
