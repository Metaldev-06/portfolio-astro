---
interface Props {
  name: string;
  img: string;
  slug: string;
}

const { name, img, slug } = Astro.props;
---

<a href={`/project/${slug}`}>
  <div class="card">
    <div class="card__img">
      <img src={img} alt={name} width="300" loading="eager" />
    </div>

    <div class="card__text">
      <h3>{name}</h3>
    </div>
  </div>
</a>

<style>
  a {
    width: 100%;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    cursor: pointer;
    border-radius: 4px;

    .card {
      width: 100%;
      position: relative;
      /* overflow: hidden; */
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      cursor: pointer;
      border-radius: 4px;

      .card__img {
        width: 100%;
        height: 300px;
        position: absolute;
        z-index: -1;
        overflow: hidden;
        border-radius: 8px;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          transition: transform 0.3s ease-in-out;
        }
      }

      .card__text {
        padding: 1rem;

        h3 {
          color: white;
        }
      }
    }
    &:hover {
      .card__img {
        img {
          transform: scale(1.1);
        }
      }
    }
  }
</style>
