---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<button data-text="Awesome" class="button">
  <span class="actual-text">&nbsp;{title}&nbsp;</span>
  <span class="hover-text" aria-hidden="true">&nbsp;{title}&nbsp;</span>
</button>

<style>
  .button {
    margin: 0;
    height: auto;
    background: transparent;
    padding: 0;
    border: none;
  }

  .button {
    --border-right: 6px;
    --fs-size: 2em;
    letter-spacing: 3px;
    text-decoration: none;
    font-size: var(--fs-size);
    position: relative;
    text-transform: uppercase;
    color: transparent;
    -webkit-text-stroke: 1px var(--color-text);
    cursor: pointer;
  }

  /* this is the text, when you hover on button */
  .hover-text {
    position: absolute;
    box-sizing: border-box;
    content: attr(data-text);
    color: var(--color-complementary);
    width: 0%;
    inset: 0;
    border-right: var(--border-right) solid var(--color-complementary);
    overflow: hidden;
    transition: 0.5s;
    -webkit-text-stroke: 1px var(--color-complementary);
  }

  /* hover */
  .button:hover .hover-text {
    width: 100%;
    filter: drop-shadow(0 0 23px var(--color-complementary));
  }
</style>
