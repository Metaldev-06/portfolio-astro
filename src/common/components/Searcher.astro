---
interface Props {
  placeholder: string;
}

const { placeholder } = Astro.props;
---

<form>
  <input type="text" name="searcher" id="searcher" placeholder={placeholder} />
</form>

<style>
  form {
    width: 100%;
    max-width: 400px;
    height: 32px;
  }

  input {
    width: 100%;
    height: 100%;
    border-radius: 12px;
    padding-left: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.09);
    outline: none;
    background-color: transparent;
    color: #ddd;

    &::placeholder {
      font-size: 0.9rem;
    }
  }
</style>
