---
import Logo from "./Logo.astro";
import Searcher from "./Searcher.svelte";
---

<header class="header__container">
  <div class="header__content">
    <div class="logo__container">
      <a href="/blog">
        <Logo />
      </a>
    </div>

    <nav class="nav__menu">
      <a href="/blog" class="nav__item">Inicio</a>
      <!-- <a href="/blog/courses" class="nav__item">Curso</a> -->
      <a href="/" class="nav__item">Portfolio</a>
    </nav>

    <Searcher placeholder="Buscar..." client:load />
  </div>
</header>

<style>
  .header__container {
    width: 100%;
    height: 60px;
    background-color: var(--color-header-blog-bg);

    .header__content {
      width: var(--full-width);
      max-width: var(--max-width);
      height: 100%;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 1rem;

      .logo__container {
        width: 30px;

        a {
          color: var(--color-white);
        }
      }

      .nav__menu {
        display: flex;
        gap: 0.5rem;

        .nav__item {
          padding: 0.5rem 0.2rem;
          color: var(--color-white);
          text-transform: uppercase;
          opacity: 0.8;
          transition: all 0.3s ease-in-out;

          &:hover {
            opacity: 1;
          }
        }
      }
    }
  }
</style>
