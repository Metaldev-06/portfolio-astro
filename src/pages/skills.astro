---
import { db, Skills as SkillsDb } from "astro:db";

import Atropos from "@common/components/Atropos.astro";
import Title from "@common/components/Title.astro";
import Layout from "@layouts/Layout.astro";

const skills = await db.select().from(SkillsDb);

const frontend = skills.filter((skill) => skill.stack === "frontend");
const backend = skills.filter((skill) => skill.stack === "backend");
const database = skills.filter((skill) => skill.stack === "database");
const library = skills.filter((skill) => skill.stack === "library");
---

<Layout title="Skills">
  <section class="skills__section">
    <Title title="Habilidades" />

    <article class="skills__container">
      <div class="frontend">
        <h2>Frontend</h2>

        <div class="card__container">
          {
            frontend.map(({ name, url_image }) => (
              <Atropos src={url_image} name={name} />
            ))
          }
        </div>
      </div>
      <div class="frontend">
        <h2>Backend</h2>

        <div class="card__container">
          {
            backend.map(({ name, url_image }) => (
              <Atropos src={url_image} name={name} />
            ))
          }
        </div>
      </div>
      <div class="frontend">
        <h2>Base de datos</h2>

        <div class="card__container">
          {
            database.map(({ name, url_image }) => (
              <Atropos src={url_image} name={name} />
            ))
          }
        </div>
      </div>
      <div class="frontend">
        <h2>Librer√≠as</h2>

        <div class="card__container">
          {
            library.map(({ name, url_image }) => (
              <Atropos src={url_image} name={name} />
            ))
          }
        </div>
      </div>
    </article>
  </section>
</Layout>

<style>
  .skills__section {
    width: var(--full-width);
    max-width: var(--max-width);
    margin: 6rem auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;

    .skills__container {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 5rem;

      .frontend {
        width: 100%;
        .card__container {
          width: 100%;
          display: flex;
          justify-content: center;
          align-items: center;
          flex-wrap: wrap;
          gap: 2rem;
          text-align: center;
        }
      }
    }
  }
</style>
