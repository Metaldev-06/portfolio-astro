---
import { db, eq } from "astro:db";
import Layout from "../../layouts/Layout.astro";
import { Projects } from "astro:db";

export const prerender = false;

const { pathname } = Astro.url;
const normalizedPathName = pathname.split("/")[2];

const projects = await db
  .select()
  .from(Projects)
  .where(eq(Projects.slug, normalizedPathName));

const project = projects[0];

if (project === undefined) {
  return Astro.redirect("/404");
}
---

<Layout title="Project">
  <section class="project__section">
    <article class="project__container">
      <div class="img__container">
        <img src={project.url_image} alt={project.name} width="300" />
      </div>

      <div class="text__container">
        <div class="header__container">
          <h1>{project.name}</h1>

          <p>{project.description}</p>

          <div class="status__deploy">
            <div class="client__deploy">
              Estado del front:
              <span>
                {project.client_status ? "Activo" : "Inactivo"}
              </span>
            </div>
            <div class="server__deploy">
              Estado del back:
              <span>
                {project.server_status ? "Activo" : "Inactivo"}
              </span>
            </div>
          </div>
        </div>

        <div class="info__container">
          <h2>Tecnolog√≠as</h2>

          <div class="info__cards--container">
            {
              project.technologies.map((name) => {
                return (
                  <div class="info__card">
                    <p>{name}</p>
                  </div>
                );
              })
            }
          </div>
        </div>
      </div>
    </article>
  </section>
</Layout>

<style>
  .project__section {
    width: var(--full-width);
    max-width: var(--max-width);
    margin: 6rem auto;

    .project__container {
      width: 100%;
      display: flex;
      gap: 1rem;

      .img__container {
        width: 100%;
        max-width: 600px;
        overflow: hidden;
        border-radius: 8px;
        /* height: 300px; */

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          border-radius: 8px;
          /* scale: 1.1; */
        }
      }

      .text__container {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 1rem;

        .header__container {
          display: flex;
          flex-direction: column;
          gap: 1rem;

          h1 {
            font-size: clamp(1.5rem, 5vw, 2.5rem);
            font-weight: bold;
          }

          .status__deploy {
            display: flex;
            gap: 1rem;
            font-weight: bold;

            span {
              font-weight: normal;
            }

            .client__deploy {
            }
            .server__deploy {
            }
          }
        }

        .info__container {
          display: flex;
          flex-direction: column;
          gap: 1rem;

          .info__cards--container {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;

            .info__card {
              background-color: var(--color-text);
              color: var(--color-bg);
              padding: 0.5rem 1rem;
              border-radius: 8px;
              font-weight: bold;
            }
          }
        }
      }
    }
  }

  @media (width < 800px) {
    .project__container {
      flex-direction: column;
    }

    .project__section .project__container .img__container {
      max-width: none;
    }
  }
</style>
